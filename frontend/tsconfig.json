{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,  // Para emitir os arquivos compilados
    "jsx": "preserve"
  },
  "include": [
    "frontend/src",  // Se o frontend também está na mesma estrutura de pastas, inclua isso
    "src"            // Inclui também a pasta src para o backend
  ]
}
